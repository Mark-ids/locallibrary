<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/mincardheight"
    style="@style/Widget.MaterialComponents.CardView"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tvcategorytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_title1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvcategorydescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcategorytitle"
            android:layout_marginTop="@dimen/card_element_margin"
            android:textSize="@dimen/normaltextsize"/>

        <TextView
            android:id="@+id/tvupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcategorydescription"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/card_element_margin"
            android:layout_marginTop="@dimen/smallscreengutter"
            android:textSize="@dimen/card_action_textsize"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="@string/update"/>

        <TextView
            android:id="@+id/tvdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcategorydescription"
            android:layout_toEndOf="@id/tvupdate"
            android:layout_margin="@dimen/card_element_margin"
            android:layout_marginTop="@dimen/smallscreengutter"
            android:textSize="18sp"
            android:textColor="@color/colorInvalid"
            android:textStyle="bold"
            android:text="@string/delete"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>